.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper swiper swiper-item {
  height: 340rpx;
}
.index_swiper swiper swiper-item navigator {
  height: 340rpx;
}
.index_swiper swiper swiper-item navigator image {
  width: 100%;
  height: 340rpx;
}
.index_cate {
  display: flex;
}
.index_cate navigator {
  flex: 1;
  padding: 20rpx;
}
.index_cate navigator image {
  width: 100%;
}
.index_floor .floor_group {
  padding: 20rpx;
}
.index_floor .floor_group navigator image {
  width: 100%;
}
.floor_content {
  overflow: hidden;
}
.floor_content navigator {
  width: 33.33%;
  height: 386rpx;
  float: left;
}
.floor_content navigator:nth-last-child(-n+4) {
  height: 193rpx;
  padding-left: 10rpx;
}
.floor_content navigator:nth-child(2),
.floor_content navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.floor_content navigator image {
  width: 100%;
  height: 100%;
}
